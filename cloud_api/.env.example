# ============================================
# Environment Configuration Template
# ============================================
# Copy this file to .env or .env.development and fill in your values.
#
# For docker-compose:
#   Option 1: Create a .env file in this directory (docker-compose reads it automatically)
#   Option 2: Use -e flags: docker-compose -e VAR=value up
#   Option 3: Pass from CI/CD pipeline with ${{ secrets.VAR_NAME }}
#
# SECURITY: Never commit real secrets to git. Use:
#   - .gitignore for local .env files
#   - GitHub Secrets for CI/CD
#   - AWS Secrets Manager / HashiCorp Vault for production

# Server Port
PORT=80

# Node Environment
NODE_ENV=production

# Authentication & Security
# Set to true in production
REQUIRE_AUTH=true

# API Key for client authentication (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
API_KEY=generate-a-secure-key-here

# Redis Configuration (Horizontal Scaling)
# Local: redis://localhost:6379
# Remote: redis://:password@host:port
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password-here
REDIS_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=20

# yt-dlp Configuration
YTDLP_TIMEOUT=25000
YTDLP_MAX_BUFFER=10485760

# Feature Flags
ENABLE_HEALTH_DETAILS=false

# Sentry DSN for error tracking
SENTRY_DSN=https://your-key@sentry.io/your-project-id

# HAProxy Stats Dashboard Credentials
# Generate strong password: openssl rand -base64 32
HAPROXY_STATS_USER=admin
HAPROXY_STATS_PASSWORD=generate-a-secure-password-here

# CORS Origins (comma-separated, or "*" for all origins)
# Example: https://example.com,https://app.example.com
# Leave empty for no CORS (safe default)
ALLOWED_ORIGINS=
